<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="moo_sitemap_footer_link" ifconfig="moositemap/sitemap/footer">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Site Map</argument>
                    <argument name="path" xsi:type="string">sitemap/index/index</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
